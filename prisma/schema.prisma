generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum user_role {
  MEMBER
  ADMIN
  ORG_ADMIN
}

enum status {
  PENDING
  ACCEPTED
  REVOKED
  EXPIRED
}

model users {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenant_id     String?   @db.Uuid
  role          user_role @default(MEMBER)
  name          String    @db.VarChar(150)
  email         String    @unique @db.VarChar(180)
  password_hash String
  is_active     Boolean   @default(true)
  created_at    DateTime  @default(now()) @db.Timestamptz(6)
  updated_at    DateTime  @default(now()) @db.Timestamptz(6)

  @@map("users")
}

model organizations {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name          String    @db.VarChar(150)
  slug         String    @unique @db.VarChar(180) //domínio da organização
  status     Boolean   @default(true)
  created_at    DateTime  @default(now()) @db.Timestamptz(6)
  updated_at    DateTime  @default(now()) @db.Timestamptz(6)

  @@map("organizations")
}

model organization_invites {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  org_id         String   @db.Uuid
  email          String   @db.VarChar(180)
  role           user_role
  token_hash     String   @unique @db.VarChar(250)
  expired_at     DateTime @db.Timestamptz(6)
  status         status    @default(PENDING)
  created_by     String   @db.Uuid
  accepted_by    String?  @db.Uuid
  created_at     DateTime @default(now()) @db.Timestamptz(6)

  @@map("organization_invites")
}